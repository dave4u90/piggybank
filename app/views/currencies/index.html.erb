<%= button_to t('currencies.capture'), capture_currencies_path, method: :get, class: 'btn btn-primary float-right m-2' %>
<table class='table table-striped table-bordered table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'><%= t('currencies.name') %></th>
      <th scope='col'><%= t('currencies.code') %></th>
      <th scope='col'><%= t('currencies.latest_price') %></th>
      <th scope='col'><%= t('currencies.previous_price') %></th>
      <th scope='col'><%= t('currencies.actions') %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
	<td scope='col'><%= currency.name %></td>
	<td scope='col'><%= currency.code %></td>
	<td scope='col'><%= currency.latest_price %></td>
	<td scope='col'><%= currency.previous_price %></td>
	<td scope='col'><%= link_to t('currencies.history'), currency %></td>
      </tr>
      <% end %>
  </tbody>
</table>
