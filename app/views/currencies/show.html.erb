<div class='clearfix'>
  <%= line_chart chart_data_currencies_path(id: @currency.id), min: @prices.minimum(:last), max: @prices.maximum(:last), xtitle: t('currencies.time'), ytitle: t('currencies.price') %>
</div>

<br />

<table class='table table-striped table-bordered table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'><%= t('currencies.volume_24h') %></th>
      <th scope='col'><%= t('currencies.volume') %></th>
      <th scope='col'><%= t('currencies.prev_close') %></th>
      <th scope='col'><%= t('currencies.last') %></th>
      <th scope='col'><%= t('currencies.bid') %></th>
      <th scope='col'><%= t('currencies.ask') %></th>
      <th scope='col'><%= t('currencies.current_time') %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @prices.each do |price| %>
      <tr>
	<td scope='col'><%= price.volume_24h %></td>
	<td scope='col'><%= price.volume %></td>
	<td scope='col'><%= price.prev_close %></td>
	<td scope='col'><%= price.last %></td>
	<td scope='col'><%= price.bid %></td>
	<td scope='col'><%= price.ask %></td>
	<td scope='col'><%= price.current_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='digg_pagination'>
  <%= will_paginate @prices, container: false %>
</div>
